    "version": "0.2.0",
    "configurations": [
        {
            "name": "derl (test-directory)",
            "type": "python",
            "request": "launch",
            "module": "derl.main",
            "args": [
                "--context",
                "--dispatch",
                "--stats",
                "--verbose",
                "tests/test-directory/"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "derl (man2)",
            "type": "python",
            "request": "launch",
            "module": "derl.main",
            "args": [
                "--dispatch",
                "--stats",
                "--very-verbose",
                "man2"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "/home/todde/contrib/man-pages"
        }
    ]
}
