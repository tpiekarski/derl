{
    "[python]": {
        "editor.rulers": [
            100,
            120
        ],
        "editor.tabSize": 4
    },
    "python.linting.pylintArgs": [
        "--max-line-length=120"
    ],
    "python.formatting.autopep8Args": [
        "--max-line-length=120"
    ],
    "[markdown]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.rulers": [
            100,
            120
        ],
        "editor.tabSize": 2
    },
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.eggs": true,
        "**/.git": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true
    },
    "files.insertFinalNewline": true,
    "cSpell.enableFiletypes": [
        "python",
        "markdown"
    ],
    "cSpell.ignoreWords": [
        "blandit",
        "condimentum",
        "derl",
        "dignissim",
        "donec",
        "efficitur",
        "eget",
        "felis",
        "fusce",
        "iaculis",
        "justo",
        "lectus",
        "malesuada",
        "mauris",
        "maximus",
        "mollis",
        "nullam",
        "odio",
        "orci",
        "quis",
        "rhoncus",
        "sodales",
        "tincidunt",
        "turpis",
        "ullamcorper",
        "ultricies",
        "vestibulum"
    ],
}
